# WealthFam Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database connection string (default uses local DuckDB file)
DATABASE_URL=duckdb:////data/family_finance_v3.duckdb

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Application name
PROJECT_NAME=WealthFam

# API version prefix
API_V1_STR=/api/v1

# Frontend build identifier (auto-generated during deployment)
VITE_APP_BUILD=dev

# ===========================================
# SECURITY
# ===========================================
# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT Algorithm
ALGORITHM=HS256

# Access token expiry (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ===========================================
# AI INTEGRATION (Optional)
# ===========================================
# Google Gemini API Key for AI-powered features
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# AI model to use
GEMINI_MODEL=gemini-pro

# ===========================================
# EMAIL SYNC (Optional)
# ===========================================
# IMAP Configuration for automated transaction email scanning
IMAP_SERVER=
IMAP_PORT=993
IMAP_USERNAME=
IMAP_PASSWORD=
IMAP_USE_SSL=true

# Email sync interval (minutes)
EMAIL_SYNC_INTERVAL=30

# ===========================================
# MOBILE APP INTEGRATION
# ===========================================
# Enable mobile device approval mechanism
MOBILE_DEVICE_APPROVAL=true

# ===========================================
# LOGGING
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# EXTERNAL SERVICES (Optional)
# ===========================================
# Market data refresh interval (minutes)
MARKET_DATA_REFRESH_INTERVAL=60

# ===========================================
# DEMO MODE (Only for public demos)
# ===========================================
# Enable demo mode (resets data daily)
DEMO_MODE=false

# ===========================================
# CORS (Development only - set specific origins in production)
# ===========================================
# Allowed CORS origins (comma-separated)
# CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ===========================================
# PERFORMANCE
# ===========================================
# Number of worker processes (auto-detect if not set)
# WORKERS=4

# Maximum upload file size (MB)
MAX_UPLOAD_SIZE_MB=10
