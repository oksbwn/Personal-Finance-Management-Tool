{
    "name": "WealthFam - Personal Finance Management",
    "description": "Premium AI-driven personal and family finance management platform. Track expenses, manage investments, analyze spending with AI intelligence.",
    "repository": "https://github.com/oksbwn/wealthfam",
    "logo": "https://raw.githubusercontent.com/oksbwn/wealthfam/main/frontend/public/logo.png",
    "keywords": [
        "finance",
        "budgeting",
        "expense-tracker",
        "ai",
        "personal-finance",
        "investments",
        "mutual-funds"
    ],
    "website": "https://wealthfam.app",
    "success_url": "/",
    "env": {
        "DATABASE_URL": {
            "description": "Database connection string (uses DuckDB with persistent volume)",
            "value": "duckdb:////data/family_finance_v3.duckdb",
            "required": false
        },
        "GEMINI_API_KEY": {
            "description": "Google Gemini API key for AI-powered transaction parsing (optional but recommended)",
            "value": "",
            "required": false
        },
        "SECRET_KEY": {
            "description": "JWT secret key for authentication (auto-generated if not provided)",
            "generator": "secret",
            "required": false
        }
    },
    "formation": {
        "web": {
            "docker": {
                "dockerfile": "Dockerfile"
            },
            "env": {
                "DATABASE_URL": "duckdb:////data/family_finance_v3.duckdb"
            },
            "ports": [
                {
                    "port": 80,
                    "protocol": "http"
                }
            ],
            "health_checks": [
                {
                    "protocol": "http",
                    "port": 80,
                    "path": "/health",
                    "interval_seconds": 30,
                    "timeout_seconds": 5,
                    "healthy_threshold": 2,
                    "unhealthy_threshold": 3
                }
            ],
            "instance": {
                "type": "nano"
            },
            "regions": [
                "fra"
            ],
            "scaling": {
                "min": 1,
                "max": 1
            },
            "volumes": [
                {
                    "path": "/data",
                    "size_gb": 1
                }
            ]
        }
    },
    "addons": [],
    "buildpacks": []
}